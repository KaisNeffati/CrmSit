{% extends "SITPlatformBundle::layout.html.twig" %}

        {% block title %}
            Annonces - {{ parent() }}
        {% endblock %}
    {% block sitplatform_center %}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">Modifier Etat Produit : </h2>
            </div>

            <div class="mdl-card__supporting-text">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--4-col">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_errors(form.status) }}
                            {{ form_widget(form.status, {'attr': {'class': 'mdl-textfield__input','id':'status'}}) }}
                            <label class="mdl-textfield__label" for="status">{{ form_label(form.status) }}</label>
                        </div>
                    </div>
                    <div class="mdl-cell mdl-cell--4-col">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            {{ form_errors(form.budget) }}
                            {{ form_widget(form.budget, {'attr': {'class': 'mdl-textfield__input','id':'budget'}}) }}
                            <label class="mdl-textfield__label" for="budget">{{ form_label(form.budget) }}</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="">
                    {{ form_widget(form.enregister, {'attr': {'class': 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect','type':'submit'}}) }}
                </a>
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('sit_produit',{'id':id,'idproduit':idproduit}) }}">
                    Cancel
                </a>
            </div>
        </div>
        {{ form_end(form) }}
    {% endblock %}

