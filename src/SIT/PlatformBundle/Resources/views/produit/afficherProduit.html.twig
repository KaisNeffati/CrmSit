{% extends "SITPlatformBundle::layout.html.twig" %}

{% block title %}
    Annonces - {{ parent() }}
{% endblock %}
    {% block sitplatform_center %}

        <div class="demo-card-square mdl-card mdl-shadow--2dp">

            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">Produit Num : {{ produit.id }}</h2>
                <div class="right_modifierdelete">
                    <a class="mdl-list__item-secondary-action" href="{{ path('sit_modifier_produit',{'id':id,'idproduit':produit.id }) }}">
                        <i class="material-icons">edit</i>
                    </a>
                  <a class="mdl-list__item-secondary-action" href="{{ path('sit_supprimer_produit',{'id':id,'idproduit':produit.id }) }}">
                        <i class="material-icons">delete</i>
                    </a>
                </div>
            </div>
            <div class="mdl-card__supporting-text">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--4-col"><strong>libelle : </strong> {{ produit.libelle }}
                        <br><br><strong>Date de Livraison : </strong> {{ produit.dateLivraison|date('Y') }}</div>
                    <div class="mdl-cell mdl-cell--4-col"><strong>Periode de livraison : </strong> {{ produit.periodeLivraison }}</div>
                    <div class="mdl-cell mdl-cell--4-col"><strong>Type d'installation : </strong> {{ produit.typedinstallation }}</div>
                </div>
            </div>
            {%  for item in listetatproduit %}
                <hr>
            <div class="mdl-card__supporting-text">
                <div class="right_modifierdelete">
                    <a class="mdl-list__item-secondary-action" href="{{ path('sit_modifier_etat_produit',{'id':id,'idproduit':produit.id ,'idetatproduit':item.id}) }}">
                        <i class="material-icons">edit</i>
                    </a>
                    <a class="mdl-list__item-secondary-action" href="{{ path('sit_supprimer_etat_produit',{'id':id,'idproduit':produit.id ,'idetatproduit':item.id}) }}">
                        <i class="material-icons">delete</i>
                    </a>
                </div>
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--4-col">
                        <strong>Status : </strong> {{ item.status }}
                    </div>
                    <div class="mdl-cell mdl-cell--4-col"><strong>Budget : </strong> {{ item.budget }}</div>
                    <div class="mdl-cell mdl-cell--4-col"><strong>Commercial : </strong> {{ item.commercial }}</div>
                </div>
            </div>

            {% endfor %}
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('sit_ajouter_etat_produit',{'id':id,'idproduit':produit.id}) }}">
                    Ajouter Etat
                </a>
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="{{ path('sit_societe',{'id':id}) }}">
                    Retourner
                </a>
            </div>
        </div>
    <br>

    {% endblock %}
